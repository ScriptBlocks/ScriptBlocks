<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ScriptBlocks</title>
    <link rel="stylesheet" href="/highlight/default.min.css">
    <link rel="stylesheet" href="/xterm.css" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            background-color: #1e1e1e;
            color: white;
        }
        body {
            display: flex;
            flex-direction: row;
        }
        main {
            flex: 1;
            display: flex;
        }
        #leftSection {
            width: 25%;
            background-color: #222;
            border-right: 1px solid #444;
            overflow-y: auto;
            height: 100%;
            color: white;
        }
        #rightSection {
            width: 75%;
            display: flex;
            flex-direction: column;
        }
        .codearea {
            flex: 0 0 66%;
            position: relative;
            display: flex;
        }
        #codeBlock {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            padding: 10px;
            overflow: auto;
            background: #1e1e1e;
            pointer-events: none;
        }
        textarea {
            flex: 1;
            color: #fff;
            resize: none;
            outline: none;
            border: none;
            background: transparent;
            padding: 10px;
            white-space: pre-wrap;
            color: rgba(0,0,0,0);
        }
        #terminal {
            flex: 1;
            background-color: #222;
            padding: 10px;
        }
    </style>
    <%- include("partials/head") %>
</head>
<body>
    <%- include("partials/ribbon.ejs") %>
    
    <main>
        <section id="leftSection">
            <h2>Directory Tree</h2>
            <p>Content for the directory tree.</p>
        </section>
        
        <div id="rightSection">
            <div class="codearea">
                <textarea id="textarea1" wrap="soft" spellcheck="false"></textarea>
                <pre id="codeBlock" class="language-python" wrap="soft"></pre>
            </div>
            <div id="terminal"></div>
        </div>
    </main>

    <script src="/highlight.js"></script>
    <script src="/xterm.js"></script>
    <script>
        // Syntax Highlighting for Code Editor
        const textarea1 = document.getElementById("textarea1");
        const codeBlock = document.getElementById("codeBlock");

        function updateCode() {
            const content = textarea1.value
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;');
            codeBlock.innerHTML = content;
            hljs.highlightElement(codeBlock);
        }

        textarea1.addEventListener("input", updateCode);
        window.onload = function () {
            const initialCode = "# Write your code here...\nprint('Hello, World!')";
            textarea1.value = initialCode;
            updateCode();
        };
    </script>
    <script src="/renderer.js"></script>
</body>
</html>
